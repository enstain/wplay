<!DOCTYPE html>
<html>
<head>
  <title>Work &amp; Play</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_subdomain || (devise_controller?) || (@im_at_login_page) %>

  	<div class="container"> <!-- container -->
      <%= render 'layouts/header' %>
      <div class="row"> <!-- row -->

        <div class="col-sm-3 sidebar-div">
          <%= render 'layouts/sidebar' %>
        </div>

        <div class="col-sm-9">
          <%= yield %>
        </div>
      </div> <!-- /row -->
      <div class="footer">
          <p>&copy; 2014 WORK &amp; PLAY</p>
        </div>
    </div> <!-- /container -->

  <% else %> <!-- /else landing -->
    <%= render 'layouts/landing' %>
  <% end %>

</body>
</html>
